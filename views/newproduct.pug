extends layout

block content
  .container
    .row
      .col-4.offset-4
        form(action="/products" method="post")
          .form-group
            label(for='name') Name
            input#name.form-control(name='name' type='text' placeholder='Product name')
          .form-group
            label(for='price') Price
            input#price.form-control(name='price' type='number' placeholder='Product price')
          .form-group
            label(for='manufacturer') Manufacturer
            select#manufacturer.form-control(name='manufacturer')
              each manufacturer in companies
                option(value=manufacturer.id) #{manufacturer.name}
          .form-group
            label(for='stock') Stock
            input#price.form-control(name='stock' type='number' placeholder='Product stock')
          .form-group
            label(for='active') Active or inactive
            select#active.form-control(name='active')
              option(value=1) Active
              option(value=0) Inactive
          button.btn.btn-primary(type='submit') Submit