extends layout

block content
  .container
    .row
      .col-4.offset-4
        form(action="/products" method="post")
          .form-group
            label(for='name') Name
            input#name.form-control(name='name' type='text' placeholder='Product name')
          .form-group
            label(for='price') Price
            input#price.form-control(name='price' type='number' placeholder='Product price')
          .form-group
            label(for='manufacturer') Manufacturer
            input#price.form-control(name='manufacturer' type='number' placeholder='Product manufacturer')
          .form-group
            label(for='stock') Stock
            input#price.form-control(name='stock' type='number' placeholder='Product stock')
          .form-group
            label(for='active') Active
            input#price.form-control(name='active' type='number' placeholder='1 for true, 0 for false')
          button.btn.btn-primary(type='submit') Submit